<h1>管理画面</h1>

<%= link_to "ユーザー作成", new_admin_user_path %>
<table class="table">
  <th>名前</th>
  <th>メール</th>
  <th>タスク件数</th>
  <th colspan="3"></th>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.task_ids.count %></td>
      <td><%= link_to "詳細", admin_user_path(user.id) %></td>
      <td><%= link_to "編集", edit_admin_user_path(user.id) %></td>
      <td><%= button_to "削除", admin_user_path(user.id), method: :delete %></td>
    </tr>
  <% end %>
</table>