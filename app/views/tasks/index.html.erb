<h1>タスク一覧</h1>

<%= link_to "新規作成", new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %>

<%= form_with(scope: :task, url: tasks_path, local: true, method: :get ) do |f| %>
  <%= f.label :search %>
  <%= f.text_field "search" %>

  <%= f.label :progress %>
  <%= select :progress, :name, Task.progresses.keys.to_a, include_blank: true %>
  <%= f.submit "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>タスク</th>
      <th>説明</th>
      <th>締切</th>
      <th>更新日</th>
      <th>進捗</th>
      <th>優先順位</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.explanation %></td>
          <td><%= task.deadline.strftime('%Y/%m/%d %R') %></td>
          <td><%= task.updated_at.strftime('%Y/%m/%d %R') %></td>
          <td><%= task.progress %></td>
          <td><%= task.priority %></td>
          <td><%= link_to "詳細", task %></td>
          <td><%= link_to "編集", edit_task_path(task.id) %></td>
          <td><%= button_to "削除", task_path(task.id), method: :delete %></td>
        </tr>
    <% end %>
    <tr><td><%= paginate @tasks %></td></tr>
  </tbody>

</table>